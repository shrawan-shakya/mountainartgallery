rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Only authenticated users can write files under 'artworks/'
    match /artworks/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if true;
    }
  }
}
